{
	"info": {
		"_postman_id": "tpay-frontend-api",
		"name": "TPay Frontend API",
		"description": "Frontend-optimized API endpoints for TPay swap functionality",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Token Management",
			"item": [
				{
					"name": "Get All Tokens",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/frontend/tokens?chainId=11155111",
							"host": ["{{base_url}}"],
							"path": ["frontend", "tokens"],
							"query": [
								{
									"key": "chainId",
									"value": "11155111"
								}
							]
						},
						"description": "Get all supported tokens with prices and metadata"
					}
				},
				{
					"name": "Get Token by Address",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/frontend/token/{{weth_address}}?chainId=11155111",
							"host": ["{{base_url}}"],
							"path": ["frontend", "token", "{{weth_address}}"],
							"query": [
								{
									"key": "chainId",
									"value": "11155111"
								}
							]
						},
						"description": "Get specific token information with current price"
					}
				}
			]
		},
		{
			"name": "Quote System",
			"item": [
				{
					"name": "Get Quote - WETH to USDC",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"tokenIn\": \"{{weth_address}}\",\n  \"tokenOut\": \"{{usdc_address}}\",\n  \"amountIn\": \"1.0\",\n  \"slippagePct\": 0.5,\n  \"chainId\": \"11155111\",\n  \"userAddress\": \"{{user_address}}\"\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{base_url}}/frontend/quote",
							"host": ["{{base_url}}"],
							"path": ["frontend", "quote"]
						},
						"description": "Get optimized quote for swap with price impact calculation"
					}
				},
				{
					"name": "Get Quote - USDC to WETH",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"tokenIn\": \"{{usdc_address}}\",\n  \"tokenOut\": \"{{weth_address}}\",\n  \"amountIn\": \"2000.0\",\n  \"slippagePct\": 0.5,\n  \"chainId\": \"11155111\",\n  \"userAddress\": \"{{user_address}}\"\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{base_url}}/frontend/quote",
							"host": ["{{base_url}}"],
							"path": ["frontend", "quote"]
						},
						"description": "Get quote for USDC to WETH swap"
					}
				}
			]
		},
		{
			"name": "Swap Operations",
			"item": [
				{
					"name": "Validate Swap",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"tokenIn\": \"{{weth_address}}\",\n  \"tokenOut\": \"{{usdc_address}}\",\n  \"amountIn\": \"1.0\",\n  \"slippageTolerance\": 0.5,\n  \"userAddress\": \"{{user_address}}\"\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{base_url}}/frontend/swap/validate",
							"host": ["{{base_url}}"],
							"path": ["frontend", "swap", "validate"]
						},
						"description": "Validate swap parameters before execution"
					}
				},
				{
					"name": "Execute Swap",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"tokenIn\": \"{{weth_address}}\",\n  \"tokenOut\": \"{{usdc_address}}\",\n  \"amountIn\": \"1.0\",\n  \"recipient\": \"{{user_address}}\",\n  \"slippageTolerance\": 0.5,\n  \"ttl\": 600,\n  \"userAddress\": \"{{user_address}}\",\n  \"clientRequestId\": \"{{$guid}}\"\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{base_url}}/frontend/swap/execute",
							"host": ["{{base_url}}"],
							"path": ["frontend", "swap", "execute"]
						},
						"description": "Execute swap with enhanced security validation"
					}
				},
				{
					"name": "Get Swap Status",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/frontend/swap/{{swap_id}}",
							"host": ["{{base_url}}"],
							"path": ["frontend", "swap", "{{swap_id}}"]
						},
						"description": "Get swap status and details"
					}
				}
			]
		},
		{
			"name": "User Data",
			"item": [
				{
					"name": "Get User Swap History",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/frontend/user/{{user_address}}/swaps?limit=20&offset=0",
							"host": ["{{base_url}}"],
							"path": ["frontend", "user", "{{user_address}}", "swaps"],
							"query": [
								{
									"key": "limit",
									"value": "20"
								},
								{
									"key": "offset",
									"value": "0"
								}
							]
						},
						"description": "Get user's swap history with pagination"
					}
				},
				{
					"name": "Get User Swaps by Status",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/frontend/user/{{user_address}}/swaps?status=completed&limit=10",
							"host": ["{{base_url}}"],
							"path": ["frontend", "user", "{{user_address}}", "swaps"],
							"query": [
								{
									"key": "status",
									"value": "completed"
								},
								{
									"key": "limit",
									"value": "10"
								}
							]
						},
						"description": "Get user's completed swaps only"
					}
				}
			]
		},
