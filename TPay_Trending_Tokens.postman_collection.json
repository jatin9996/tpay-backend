{
	"info": {
		"_postman_id": "trending-tokens-test",
		"name": "TPay Trending Tokens API",
		"description": "Collection for testing the new trending tokens functionality",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Get Trending Tokens (Default)",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{base_url}}/tokens/trending",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"tokens",
						"trending"
					]
				},
				"description": "Get trending tokens with default parameters (24h window, 10 limit)"
			},
			"response": []
		},
		{
			"name": "Get Trending Tokens (Custom Limit)",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{base_url}}/tokens/trending?window=24h&limit=5",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"tokens",
						"trending"
					],
					"query": [
						{
							"key": "window",
							"value": "24h"
						},
						{
							"key": "limit",
							"value": "5"
						}
					]
				},
				"description": "Get top 5 trending tokens by 24h volume"
			},
			"response": []
		},
		{
			"name": "Get Trending Tokens (Max Limit)",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{base_url}}/tokens/trending?window=24h&limit=100",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"tokens",
						"trending"
					],
					"query": [
						{
							"key": "window",
							"value": "24h"
						},
						{
							"key": "limit",
							"value": "100"
						}
					]
				},
				"description": "Get top 100 trending tokens (maximum allowed)"
			},
			"response": []
		},
		{
			"name": "Get Trending Tokens (Invalid Window)",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{base_url}}/tokens/trending?window=7d&limit=10",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"tokens",
						"trending"
					],
					"query": [
						{
							"key": "window",
							"value": "7d"
						},
						{
							"key": "limit",
							"value": "10"
						}
					]
				},
				"description": "Test error handling for unsupported time window"
			},
			"response": []
		},
		{
			"name": "Get Trending Tokens (Invalid Limit)",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{base_url}}/tokens/trending?window=24h&limit=150",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"tokens",
						"trending"
					],
					"query": [
						{
							"key": "window",
							"value": "24h"
						},
						{
							"key": "limit",
							"value": "150"
						}
					]
				},
				"description": "Test limit validation (should cap at 100)"
			},
			"response": []
		},
		{
			"name": "Check Server Health",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{base_url}}/search",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"search"
					]
				},
				"description": "Verify server is running and database is accessible"
			},
			"response": []
		}
	],
	"event": [
		{
			"listen": "prerequest",
			"script": {
				"type": "text/javascript",
				"exec": [
					"// Set default base URL if not already set",
					"if (!pm.environment.get('base_url')) {",
					"    pm.environment.set('base_url', 'http://localhost:3001');",
					"}"
				]
			}
		}
	],
	"variable": [
		{
			"key": "base_url",
			"value": "http://localhost:3001",
			"type": "string"
		}
	]
}
